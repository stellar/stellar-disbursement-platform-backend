# Required Secrets & Keys
# -------------------------
# These variables MUST be set for the application to function correctly.

# Distribution Account
DISTRIBUTION_PUBLIC_KEY=
DISTRIBUTION_SEED=

# SEP-10 Signing
SEP10_SIGNING_PUBLIC_KEY=
SEP10_SIGNING_PRIVATE_KEY=

# General Configuration (defaults for local development)
# ---------------------
# The name of the project, used for prefixing containers and volumes.
COMPOSE_PROJECT_NAME=sdp
# The network type (e.g., testnet, pubnet).
NETWORK_TYPE=testnet
# The database name to use.
DATABASE_NAME=sdp_mtn

# Stellar Network Configuration
# -----------------------------
# The passphrase for the Stellar network.
NETWORK_PASSPHRASE="Test SDF Network ; September 2015"
# The URL of the Horizon instance.
HORIZON_URL=https://horizon-testnet.stellar.org

# SDP API Configuration
# ---------------------
# The environment the application is running in.
ENVIRONMENT=localhost
# The logging level.
LOG_LEVEL=INFO
# The port the API listens on.
PORT=8000
# The port for metrics.
METRICS_PORT=8002
# The base URL of the SDP API.
BASE_URL="http://localhost:${PORT}"
# The base URL of the SDP Dashboard
SDP_UI_BASE_URL="http://localhost:3000"
# The type of metrics to collect.
METRICS_TYPE=PROMETHEUS
# The email sender type (e.g., DRY_RUN, AWS_SES).
EMAIL_SENDER_TYPE=DRY_RUN
# The SMS sender type (e.g., DRY_RUN, TWILIO).
SMS_SENDER_TYPE=DRY_RUN
# Whether client attribution is required for SEP-10.
SEP10_CLIENT_ATTRIBUTION_REQUIRED=true
# The reCAPTCHA site key.
RECAPTCHA_SITE_KEY=6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI
# Whether to disable MFA.
DISABLE_MFA=true
# Whether to disable reCAPTCHA.
DISABLE_RECAPTCHA=true
# Allowed origins for CORS.
CORS_ALLOWED_ORIGINS=*

# Multi-tenant Configuration
# --------------------------
# The port for the admin API.
ADMIN_PORT=8003
# The instance name displayed in the UI.
INSTANCE_NAME="SDP on Docker"
# The amount of XLM to bootstrap for new tenants.
TENANT_XLM_BOOTSTRAP_AMOUNT=5
# Whether to run in single-tenant mode.
SINGLE_TENANT_MODE=false

# Scheduler Configuration
# -----------------------
# Interval in seconds for the receiver invitation job.
SCHEDULER_RECEIVER_INVITATION_JOB_SECONDS=10
# Interval in seconds for the payment job.
SCHEDULER_PAYMENT_JOB_SECONDS=10

# TSS (Transaction Submission Service) Configuration
# --------------------------------------------------
# Number of channel accounts to use.
NUM_CHANNEL_ACCOUNTS=3
# Max base fee for transactions.
MAX_BASE_FEE=1000000
# Port for TSS metrics.
TSS_METRICS_PORT=9002
# Type of TSS metrics.
TSS_METRICS_TYPE=TSS_PROMETHEUS

# ðŸ”‘ Secrets & Keys
# -------------------------

# Encryption Passphrases (for encrypting channel and distribution account seeds in the tss.vault table)
DISTRIBUTION_ACCOUNT_ENCRYPTION_PASSPHRASE="${DISTRIBUTION_SEED}"
CHANNEL_ACCOUNT_ENCRYPTION_PASSPHRASE="${DISTRIBUTION_SEED}"

# Admin Authentication
ADMIN_ACCOUNT=SDP-admin
ADMIN_API_KEY=api_key_1234567890

# External Services Secrets (AWS, Twilio)
AWS_ACCESS_KEY_ID=MY_AWS_ACCESS_KEY_ID
AWS_REGION=MY_AWS_REGION
AWS_SECRET_ACCESS_KEY=MY_AWS_SECRET_ACCESS_KEY
AWS_SES_SENDER_ID=MY_AWS_SES_SENDER_ID

TWILIO_ACCOUNT_SID=MY_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=MY_TWILIO_AUTH_TOKEN
TWILIO_SERVICE_SID=MY_TWILIO_SERVICE_SID
TWILIO_SENDGRID_API_KEY=MY_TWILIO_SENDGRID_API_KEY
TWILIO_SENDGRID_SENDER_ADDRESS=MY_TWILIO_SENDGRID_SENDER_ADDRESS

# JWT & Security
